# The proxy servers get only web traffic
# Apache (80, 443, and 444) uses FWM 2
virtual=2
{% for hostname in groups['scripts-proxy-prod']|sort %}
{% with info = hostvars[hostname] %}
	real={{ info['ip'] }} gate 4096 # {{ hostname }}
{% endwith %}
{% endfor %}
	fallback=127.0.0.1 gate
	service=http
	request="__scripts/heartbeat/http?codename=ANY"
	virtualhost="heartbeat.scripts.scripts.mit.edu"
	receive="1"
	checktype=negotiate
	checkport=80
	scheduler=wlc
	persistent=600
	protocol=fwm

